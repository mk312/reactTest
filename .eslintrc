{
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always"],
    "no-extra-parens": "error",
    "max-len": ["error", { "code": 120 }],
    "no-multi-spaces": "error",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}